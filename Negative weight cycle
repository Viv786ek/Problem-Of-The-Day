int isNegativeWeightCycle(int n, vector<vector<int>>edges){
	    // Code here
	     vector<int> dis(n,1e6);
	    dis[0]=0;
	    for(int i=1;i<n;i++){
	        for(auto &p:edges){
	            if(dis[p[0]]+p[2]<dis[p[1]]){
	                dis[p[1]]=p[2]+dis[p[0]];
	            }
	        }
	    }
	    for(auto &p:edges){
	        if(dis[p[0]]+p[2]<dis[p[1]]) return 1;
	    }
	    return 0;
	}
